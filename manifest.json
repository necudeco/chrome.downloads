{
    "manifest_version": 3,
    "name": "Download Bar",
    "description": "Change Download Bar with Download Popup.",
    "version": "1.0",
    "icons":{
        "32":"icons/icon.png"
    },
    "background":{
        "service_worker": "background.js"
    },
    "permissions": [
        "downloads",
        "downloads.shelf",
        "downloads.open"
    ], 
    "action":{
        "default_popup":"popup.html"
    }
    
  }